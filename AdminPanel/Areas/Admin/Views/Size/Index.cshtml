@using AdminPanel.Entities
@model IEnumerable<Size>

@{
    ViewBag.Title = "Sizes";
}

<aside class="leftColumn col-md-4 text-center">
    @Html.ActionLink("ADD NEW", "AddSize", null, new { @class = "btn btn-black newButton" })
</aside>

<div class="col-md-8">
    <table class="aTbl table-bordered table-hover">
        <tr style="background-color: #F8F8F8">
        <tr>
            <th>
                Size
            </th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(i => item.SizeId)
                </td>
                <td>
                    @using (Html.BeginForm("DeleteSize", "Size"))
                    {
                        @Html.Hidden("sizeId", item.SizeId)
                        <input type="submit" value="DELETE" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure that you want to delete this size ?');" />
                    }
                </td>
            </tr>
        }
    </table>
</div>