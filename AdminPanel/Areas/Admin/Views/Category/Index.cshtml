@using AdminPanel.Entities
@model IEnumerable<Category>

@{
    ViewBag.Title = "Categories";
}

<aside class="leftColumn col-md-4 text-center">
    @Html.ActionLink("ADD NEW", "AddCategory", null, new { @class = "btn btn-black newButton" })
</aside>

<div class="col-md-8">
    <table class="table-bordered table-hover aTbl">
        <tr style="background-color: #F8F8F8">
            <th>
                Category
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(i => item.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("EDIT", "EditCategory", "Category", new { id = item.CategoryId }, new { @class = "btn btn-info btn-xs" })
                </td>

                <td>
                    @using (Html.BeginForm("DeleteCategory", "Category"))
                    {
                        @Html.Hidden("categoryId", item.CategoryId)
                        <input type="submit" value="DELETE" class="btn btn-xs btn-danger" onclick="return confirm('Are you sure that you want to delete this category ?');" />
                    }
                </td>
            </tr>
        }
    </table>
</div>
