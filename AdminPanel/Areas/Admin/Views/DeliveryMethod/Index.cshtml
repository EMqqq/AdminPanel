@model IEnumerable<AdminPanel.Entities.DeliveryMethod>

@{
    ViewBag.Title = "Delivery Methods";
}

<aside class="leftColumn col-md-4 text-center">
    @Html.ActionLink("ADD NEW", "AddDeliveryMethod", null, new { @class = "btn btn-black newButton" })
</aside>

<div class="col-md-8">
    <table class="table-bordered table-hover aTbl">
        <tr style="background-color: #F8F8F8">
            <th>
                Delivery Method
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(i => item.Name)
                </td>
                <td>
                    @Html.ActionLink("EDIT", "EditDeliveryMethod", "DeliveryMethod", new { id = item.DeliveryMethodId }, new { @class = "btn btn-info btn-xs" })
                </td>

                <td>
                    @using (Html.BeginForm("DeleteDeliveryMethod", "DeliveryMethod"))
                    {
                        @Html.Hidden("deliveryMethodId", item.DeliveryMethodId)
                        <input type="submit" value="DELETE" class="btn btn-xs btn-danger" onclick="return confirm('Are you sure that you want to delete this delivery method ?');" />
                    }
                </td>
            </tr>
        }
    </table>
</div>
